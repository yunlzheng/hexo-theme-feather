#header
  text-shadow: 0 0 1px #FFF;  
  margin: 50px 0px -150px 0px;
  background: rgba(0, 0, 0, 0.1);
  padding: 50px 50px 200px 50px;
  margin-top: 0px;
  a
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    float none
    ul
      list-style none
      li
        float left
        margin-left 30px
        margin-top: 8px
        a
          padding 2px 6px 2px 6px
          background rgba(0, 0, 0, 0.2)
          color #424141
          border-radius 5px
          &:hover
            background: rgba(211, 171, 45, 0.2);